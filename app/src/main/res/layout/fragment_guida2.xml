<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guida2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleBarColor"
    tools:context=".view.fragment.Guida2Fragment">


    <TextView
        android:id="@+id/secondTutorialText"
        android:layout_width="302dp"
        android:layout_height="132dp"
        android:layout_marginTop="92dp"
        android:text="@string/guide2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secondTutorialBackBtn"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:text="Indietro"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/secondTutorialNextBtn"
        android:layout_width="115dp"
        android:layout_height="48dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:text="Avanti"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/secondTutorialImg"
        android:layout_width="167dp"
        android:layout_height="273dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="112dp"
        android:contentDescription="Esempio di percorso tracciato con SkiTracker"
        android:src="@drawable/tutorial2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTutorialText" />

    <ImageView
        android:id="@+id/secondTutorialImg4"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="Icona della durata temporale"
        android:src="@drawable/distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTutorialImg3"
        app:srcCompat="@drawable/time" />

    <ImageView
        android:id="@+id/secondTutorialImg2"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="icona della distanza"
        android:src="@drawable/distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTutorialText" />

    <ImageView
        android:id="@+id/secondTutorialImg3"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="icona della velocitÃ "
        android:src="@drawable/distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTutorialImg2"
        app:srcCompat="@drawable/speed" />

    <ImageView
        android:id="@+id/secondTutorialImg5"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:contentDescription="Icona del dislivello"
        android:src="@drawable/distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTutorialImg4"
        app:srcCompat="@drawable/dislivello" />


</androidx.constraintlayout.widget.ConstraintLayout>